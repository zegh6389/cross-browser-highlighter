{
  "manifest_version": 3,
  "name": "Web Highlighter",
  "version": "1.1.1",
  "description": "Highlight and organize text on any website.",
  "permissions": [
    "storage",
    "contextMenus",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["lib/logger.js", "lib/utils.js", "lib/anchoring.js", "content.js"],
      "css": ["styles/highlighter.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "commands": {
    "highlight-yellow": {
      "suggested_key": {
        "default": "Alt+Q"
      },
      "description": "Highlight the selected text in yellow"
    },
    "highlight-green": {
      "suggested_key": {
        "default": "Alt+W"
      },
      "description": "Highlight the selected text in green"
    }
  }
}
