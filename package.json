{
  "name": "web-highlighter-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Web Highlighter SaaS - Browser Extension + Web Dashboard",
  "scripts": {
    "dev:web": "pnpm --filter web dev",
    "build:web": "pnpm --filter web build",
    "dev": "pnpm --filter web dev",
    "build": "pnpm --filter web build",
    "typecheck": "pnpm -r typecheck",
    "lint": "pnpm -r lint",
    "db:migrate": "supabase db push",
    "db:reset": "supabase db reset",
    "db:gen-types": "supabase gen types typescript --local > shared/src/types/database.ts"
  },
  "devDependencies": {
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
